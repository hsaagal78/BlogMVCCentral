<h1>Edit Post</h1>


    <li class="titleBar">
      <p>{{title}}</p>
      <p>Post By: {{user.username}}{{user.createdAt}}</p>
    </li>
    <li class= "textBar">
      <p>{{text}}</p>
      
    </li>

   
<form action="/edit/{{thought.id}}" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input name="title" type="text" placeholder="New Title" value="{{thought.title}}">
  <input name="text" type="text" placeholder="New Text" value="{{thought.text}}">
  <button type="submit">Update</button>
</form>

<form action="/edit/{{thought.id}}" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>




